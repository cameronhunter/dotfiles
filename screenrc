setenv LC_CTYPE en_US.UTF-8

defutf8				on

autodetach			on
crlf				off
deflogin			off
hardcopy_append		on

startup_message		off
vbell				off

defscrollback		10000
silencewait			15

term				screen-256color
hardstatus			off

activity			"%c activity → %n%f %t"
bell				"%c bell → %n%f %t^G"
vbell_msg			" *Bell* "

termcapinfo			xterm				"Co#256:AB=\e[48;5;%dm:AF=\e[38;5;%dm"
caption				always				"%{.3} %H %{.w} %-w%{wb}%n %t%{-}%+w"
